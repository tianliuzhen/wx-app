<view class="content">
  <view class="hr"></view>
  <view class="meet">
    <view class="frame">
      <input placeholder="请输入用户姓名" value="{{shoopingtext}}" bindinput="searchPhone"></input>
    </view>
    <view class="btn" bindtap="search" bindtap="fun_register">查询</view>
  </view>
  <block wx:for="{{userList}}" wx:key="id">
    <view class="meet">
      <view class="flex_1">
        <view class="flex_1_1">
          <view class="detail_left">姓名：</view>
          <view class="detail_right">{{item.name}}（<text style="color:#0094aa">{{item.type}}</text>）</view>
        </view>
        <view class="flex_1_1">
          <view class="detail_left">手机号：</view>
          <view class="detail_right">{{item.phone}}</view>
        </view>
        <view class="flex_1_1">
          <view class="detail_left">小区编码：</view>
          <view class="detail_right">{{item.code}}</view>
        </view>
        <view class="flex_1_1">
          <view class="detail_left">申请时间：</view>
          <view class="detail_right">{{item.createTime}}</view>
        </view>
      </view>
      <view class="flex_2">
        <view decode="{{true}}" data-userinfo="{{item}}" data-id="{{item.id}}" bindtap="audit" class="flex_2_top">
          <text bindtap="powerDrawer" data-statu="open" decode="{{true}}"> &nbsp;操作&nbsp; </text>
        </view>

      </view>
    </view>
  </block>

</view>
<!-- 弹窗代码 -->

<!--mask-->
<view class="drawer_screen" bindtap="powerDrawer" data-statu="close" wx:if="{{showModalStatus}}"></view>
<!--content-->
<!--使用animation属性指定需要执行的动画-->
<view animation="{{animationData}}" class="drawer_box" wx:if="{{showModalStatus}}">
  <view bindtap="powerDrawer" data-statu="close" class='cancel'>
    <image class="cancel_img" src="{{cancel}}"></image>
  </view>
  <!--drawer content-->
  <view class="drawer_title">用户操作</view>
  <view class="drawer_content">
    <view class="top grid">
      <label class="title col-0"><text decode="true">姓名：</text></label>
      <input class="input_base input_h30 col-1" bindinput="inputedit" data-obj="name" name="rName"
        value="{{userinfo.name}}"></input>
    </view>
    <view class="top grid">
      <label class="title col-0"><text decode="true">手机号：</text></label>
      <input class="input_base input_h30 col-1" bindinput="inputedit" data-obj="name" name="phone"
        value="{{userinfo.phone}}"></input>
    </view>
    <view class="top grid">
      <label class="title col-0">小区编码：</label>
      <input class="input_base input_h30 col-1" name="phone" bindinput="inputedit" data-obj="code"
        value="{{userinfo.code}}"></input>
    </view>
    <view class="top grid">
      <label class="title col-0">申请时间：</label>
      <input class="input_base input_h30 col-1" bindinput="inputedit" data-obj="createTime" name="createTime"
        value="{{userinfo.createTime}}"></input>
    </view>
    <view class="top grid">
      <label class="title col-0">限制次数：</label>
      <input class="input_base input_h30 col-1" bindinput="inputedit" data-obj="limitCount" name="Email"
        value="{{userinfo.limitCount}}"></input>
    </view>
    <view class="top grid">
      <label class="title col-0">有效起始时间：</label>
      <view class='timeChoose' >
      <view class='timeChooseDate'>
        <picker mode="date" value="{{startTime.date}}" data-obj="date" start="2020-00-01" end="2050-00-00" bindchange="bindStartTimeChange">
          <view class="picker">
            <input class="input_base2 input_h30 " bindinput="inputedit"   value="{{startTime.date}}"></input>
          </view>
        </picker>
      </view>
      <view class="timeChooseTime">
        <picker mode="time" value="{{startTime.time}}" data-obj="time" start="09:01" end="21:01" bindchange="bindStartTimeChange">
          <view class="picker">
            <input class="input_base3 input_h30 " bindinput="inputedit"      value="{{startTime.time}}"></input>
          </view>
        </picker>
      </view>
      </view>
    </view>
    <view class="top grid">
      <label class="title col-0">有效结束时间：</label>
      <view class='timeChoose' >
      <view class='timeChooseDate'>
        <picker mode="date" value="{{endTime.date}}" data-obj="date" start="2021-00-00" end="2050-00-00" bindchange="bindEndTimeChange">
          <view class="picker">
            <input class="input_base2 input_h30 " bindinput="inputedit" data-obj="limitCount" name="Email"
              value="{{endTime.date}}"></input>
          </view>
        </picker>
      </view>
      <view class="timeChooseTime">
        <picker mode="time" value="{{endTime.time}}" data-obj="time" start="09:01" end="21:01" bindchange="bindEndTimeChange">
          <view class="picker">
            <input class="input_base3 input_h30 " bindinput="inputedit" data-obj="limitCount" name="Email"
              value="{{endTime.time}}"></input>
          </view>
        </picker>
      </view>
      </view>
    </view>
    <view class="top bottom grid">
      <label class="title col-0">备注：</label>
      <input class="input_base input_h30 col-1" name="bz"></input>
    </view>

  </view>
  <view class="btn_ok">
    <view class='operateBtn'><text style="">同意</text></view>
    <view class='operateBtn' bindtap="editUser"><text style="">更新</text></view>
    <view class='operateBtn limitStyle'><text style="">禁用</text></view>
    <view class='operateBtn deleteStyle'><text style="">删除</text></view>
  </view>
</view>